<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAgregarRuta"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sugerir una ruta"
        android:fontFamily="@font/roboto_slan_regular"
        android:textSize="30sp"
        android:textColor="@color/items_color"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre :"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_slan_regular"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_nombre_ruta"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_slan_regular"
        android:layout_marginBottom="15dp"
        android:hint="example: Kotum B"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punto de inicio :"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_slan_regular"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_inicio_ruta"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_slan_regular"
        android:layout_marginBottom="15dp"
        android:hint="example: -71.312321, -16.31232"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Punto de llegada:"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_slan_regular"
        android:textSize="20sp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_fin_ruta"
        android:textSize="17sp"
        android:fontFamily="@font/roboto_slan_regular"
        android:layout_marginBottom="15dp"
        android:hint="example: -71.312321, -16.31232"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/btnEnviarRuta"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="300dp"/>



</LinearLayout>